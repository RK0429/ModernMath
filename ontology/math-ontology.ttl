@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix mymath: <https://mathwiki.org/ontology#> .
@prefix ontomathpro: <http://ontomathpro.org/ontology#> .

# Ontology Metadata
mymath: a owl:Ontology ;
    rdfs:label "Mathematical Knowledge Graph Ontology"@en ;
    rdfs:comment "An ontology for representing mathematical knowledge including axioms, definitions, theorems, and examples"@en ;
    dc:creator "Math Knowledge Graph Team" ;
    dcterms:created "2025-01-20"^^xsd:date ;
    owl:versionInfo "1.0.0" .

# ============================================
# Core Classes
# ============================================

mymath:MathematicalStatement a rdfs:Class ;
    rdfs:label "Mathematical Statement"@en ;
    rdfs:comment "An abstract class representing any mathematical statement"@en ;
    rdfs:subClassOf skos:Concept ;
    rdfs:seeAlso ontomathpro:E1936 ;  # OntoMathPRO Statement concept
    rdfs:comment "Mapped to OntoMathPRO E1936 Statement concept"@en .

mymath:Axiom a rdfs:Class ;
    rdfs:subClassOf mymath:MathematicalStatement ;
    rdfs:label "Axiom"@en ;
    rdfs:comment "A mathematical statement taken as true without proof"@en ;
    owl:equivalentClass ontomathpro:Axiom .

mymath:Definition a rdfs:Class ;
    rdfs:subClassOf mymath:MathematicalStatement ;
    rdfs:label "Definition"@en ;
    rdfs:comment "A statement defining the meaning of a mathematical concept"@en ;
    owl:equivalentClass ontomathpro:Definition .

mymath:Theorem a rdfs:Class ;
    rdfs:subClassOf mymath:MathematicalStatement ;
    rdfs:label "Theorem"@en ;
    rdfs:comment "A mathematical statement that has been proved on the basis of previously established statements"@en ;
    owl:equivalentClass ontomathpro:Theorem .

mymath:Lemma a rdfs:Class ;
    rdfs:subClassOf mymath:Theorem ;
    rdfs:label "Lemma"@en ;
    rdfs:comment "A subsidiary or intermediate theorem used to prove a larger theorem"@en ;
    owl:equivalentClass ontomathpro:Lemma .

mymath:Proposition a rdfs:Class ;
    rdfs:subClassOf mymath:Theorem ;
    rdfs:label "Proposition"@en ;
    rdfs:comment "A theorem of lesser importance or a result that is not the main focus"@en ;
    owl:equivalentClass ontomathpro:Proposition .

mymath:Corollary a rdfs:Class ;
    rdfs:subClassOf mymath:Theorem ;
    rdfs:label "Corollary"@en ;
    rdfs:comment "A theorem that follows readily from another theorem"@en .

mymath:Example a rdfs:Class ;
    rdfs:subClassOf mymath:MathematicalStatement ;
    rdfs:label "Example"@en ;
    rdfs:comment "A concrete illustration of a mathematical concept or theorem"@en ;
    owl:equivalentClass ontomathpro:Example .

mymath:Proof a rdfs:Class ;
    rdfs:subClassOf skos:Concept ;
    rdfs:label "Proof"@en ;
    rdfs:comment "A logical argument establishing the truth of a theorem"@en ;
    owl:equivalentClass ontomathpro:Proof .

# ============================================
# Core Properties (Relationships)
# ============================================

mymath:uses a rdf:Property ;
    rdfs:domain mymath:MathematicalStatement ;
    rdfs:range mymath:MathematicalStatement ;
    rdfs:label "uses"@en ;
    rdfs:comment "Indicates that the subject depends on or utilizes the object in its proof or statement"@en ;
    rdfs:subPropertyOf skos:related ;
    rdfs:seeAlso ontomathpro:isDefinedBy ;  # OntoMathPRO has a related concept
    rdfs:comment "Related to OntoMathPRO 'is defined by' relation"@en .

mymath:dependsOn a rdf:Property ;
    owl:equivalentProperty mymath:uses ;
    rdfs:label "depends on"@en ;
    rdfs:comment "Alternative name for 'uses' relationship"@en .

mymath:hasExample a rdf:Property ;
    rdfs:domain mymath:MathematicalStatement ;
    rdfs:range mymath:Example ;
    rdfs:label "has example"@en ;
    rdfs:comment "The subject has the object as an example"@en ;
    rdfs:subPropertyOf skos:related .

mymath:isExampleOf a rdf:Property ;
    owl:inverseOf mymath:hasExample ;
    rdfs:domain mymath:Example ;
    rdfs:range mymath:MathematicalStatement ;
    rdfs:label "is example of"@en ;
    rdfs:comment "The subject is an example of the object"@en .

mymath:generalizes a rdf:Property ;
    rdfs:domain mymath:MathematicalStatement ;
    rdfs:range mymath:MathematicalStatement ;
    rdfs:label "generalizes"@en ;
    rdfs:comment "The subject is a more general form of the object"@en ;
    rdfs:subPropertyOf skos:broader .

mymath:specializes a rdf:Property ;
    owl:inverseOf mymath:generalizes ;
    rdfs:domain mymath:MathematicalStatement ;
    rdfs:range mymath:MathematicalStatement ;
    rdfs:label "specializes"@en ;
    rdfs:comment "The subject is a special case of the object"@en ;
    rdfs:subPropertyOf skos:narrower .

mymath:implies a rdf:Property ;
    rdfs:domain mymath:MathematicalStatement ;
    rdfs:range mymath:MathematicalStatement ;
    rdfs:label "implies"@en ;
    rdfs:comment "The subject logically implies the object"@en ;
    rdfs:subPropertyOf skos:related .

mymath:isVerifiedBy a rdf:Property ;
    rdfs:domain mymath:MathematicalStatement ;
    rdfs:range mymath:FormalProof ;
    rdfs:label "is verified by"@en ;
    rdfs:comment "The subject has been formally verified by the object (a formal proof)"@en ;
    rdfs:subPropertyOf skos:related .

mymath:FormalProof a rdfs:Class ;
    rdfs:subClassOf skos:Concept ;
    rdfs:label "Formal Proof"@en ;
    rdfs:comment "A formal mathematical proof verified by a proof assistant like Lean, Coq, or Isabelle"@en .

mymath:inModule a rdf:Property ;
    rdfs:domain mymath:FormalProof ;
    rdfs:range xsd:string ;
    rdfs:label "in module"@en ;
    rdfs:comment "The module or library where the formal proof is defined"@en .

mymath:hasDomain a rdf:Property ;
    rdfs:domain mymath:MathematicalStatement ;
    rdfs:range rdfs:Literal ;
    rdfs:label "has domain"@en ;
    rdfs:comment "Indicates the mathematical field or domain (e.g., Algebra, Topology)"@en .

mymath:hasProof a rdf:Property ;
    rdfs:domain mymath:Theorem ;
    rdfs:range mymath:Proof ;
    rdfs:label "has proof"@en ;
    rdfs:comment "Links a theorem to its proof"@en .

mymath:proves a rdf:Property ;
    owl:inverseOf mymath:hasProof ;
    rdfs:domain mymath:Proof ;
    rdfs:range mymath:Theorem ;
    rdfs:label "proves"@en ;
    rdfs:comment "The subject proof establishes the object theorem"@en .

# isVerifiedBy property already defined above

# ============================================
# Metadata Properties
# ============================================

mymath:status a rdf:Property ;
    rdfs:domain mymath:MathematicalStatement ;
    rdfs:range rdfs:Literal ;
    rdfs:label "status"@en ;
    rdfs:comment "The maturity status of the content (stub, draft, complete, verified)"@en .

mymath:leanId a rdf:Property ;
    rdfs:domain mymath:MathematicalStatement ;
    rdfs:range rdfs:Literal ;
    rdfs:label "Lean identifier"@en ;
    rdfs:comment "The identifier of the corresponding formal proof in the Lean library"@en .

mymath:quartoId a rdf:Property ;
    rdfs:domain mymath:MathematicalStatement ;
    rdfs:range rdfs:Literal ;
    rdfs:label "Quarto identifier"@en ;
    rdfs:comment "The unique identifier used in Quarto cross-references"@en .

# ============================================
# Mathematical Domains (for classification)
# ============================================

mymath:MathematicalDomain a rdfs:Class ;
    rdfs:label "Mathematical Domain"@en ;
    rdfs:comment "A field or area of mathematics"@en ;
    rdfs:subClassOf skos:ConceptScheme .

mymath:Algebra a mymath:MathematicalDomain ;
    rdfs:label "Algebra"@en .

mymath:Analysis a mymath:MathematicalDomain ;
    rdfs:label "Analysis"@en .

mymath:Geometry a mymath:MathematicalDomain ;
    rdfs:label "Geometry"@en .

mymath:Topology a mymath:MathematicalDomain ;
    rdfs:label "Topology"@en .

mymath:NumberTheory a mymath:MathematicalDomain ;
    rdfs:label "Number Theory"@en .

mymath:Combinatorics a mymath:MathematicalDomain ;
    rdfs:label "Combinatorics"@en .

mymath:LogicSetTheory a mymath:MathematicalDomain ;
    rdfs:label "Logic and Set Theory"@en .

mymath:ProbabilityStatistics a mymath:MathematicalDomain ;
    rdfs:label "Probability and Statistics"@en .

mymath:CategoryTheory a mymath:MathematicalDomain ;
    rdfs:label "Category Theory"@en .
